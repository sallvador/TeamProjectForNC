<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="base.UsersEntity" table="Users" schema="public" catalog="postgres">
        <id name="userId">
            <column name="user_id" sql-type="integer"/>
        </id>
        <property name="login">
            <column name="login" sql-type="varchar"/>
        </property>
        <property name="category">
            <column name="category" sql-type="varchar"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar"/>
        </property>
    </class>
</hibernate-mapping>